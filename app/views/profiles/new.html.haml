%h1.title Personal Trainer App!
%h1 Create New Profile

= form_tag profiles_path do

  = label :profile, :email, 'Email'
  = text_field :profile, 'email'

  = label :profile, :name, 'Name'
  = text_field :profile, 'name'

  = label :profile, :weight, 'Weight'
  = text_field :profile, 'weight'

  = label :profile, :height, 'Height'
  = text_field :profile, 'height'

  = label :profile, :password, 'Password'
  = text_field :profile, 'password'

  = submit_tag 'Save Changes'
