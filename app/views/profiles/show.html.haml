-# in app/views/profiles/show.html.haml

%h2 Details about #{@profile.name}

%ul#details
  %li
    Email:
    = @profile.email
  %li
    Weight:
    = @profile.weight
  %li
    Height:
    = @profile.height

%ul#Exercises:
  

= link_to 'Edit', edit_profile_path(@profile)
= button_to 'Delete', profile_path(@profile), :method => :delete, :confirm => 'Are you sure?'

