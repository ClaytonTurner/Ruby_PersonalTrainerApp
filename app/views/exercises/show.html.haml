-# in app/views/exercises/show.html.haml
%h1.title Personal Trainer App!
- unless session[:email]
  = link_to "Login", login_path
- else
  Hello
  = Profile.find(session[:email]).name
= link_to "Create Account", new_profile_path
- unless @profile.nil?
  = link_to "View Account", profile_path(@profile)#new_profile_path

%h2 Details about #{@exercise.name}

%ul#details
  %li
    Image:
    %br
    %br
    = image_tag("#{@exercise.name}.png")
  %li
    Name:
    = @exercise.name
  %li
    Description:
    = @exercise.description
  %li
    Time:
    = @exercise.defaultTime
  
= link_to 'Back to All Workouts', workouts_path
